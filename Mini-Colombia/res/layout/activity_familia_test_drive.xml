<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textview0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_title"
        android:gravity="center|center_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_marginLeft="7dip"
        android:layout_marginRight="7dip"
        android:layout_marginTop="5dip"
        android:layout_weight="2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tituloTestDrive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dip"
            android:background="@drawable/toolbar_subtitle"
            android:gravity="left|center_vertical"
            android:text="@string/TEST_DRIVE"
            android:textColor="#D0D0D0" android:paddingLeft="7dip"/>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/fondo_instrucciones" android:layout_weight="0.70">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dip"
                android:paddingRight="30dip"
                android:paddingTop="50dip"
                android:shrinkColumns="*" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:background="@android:color/transparent"
                        android:text="Nombre:"
                        android:textColor="#D0D0D0" />

                    <EditText
                        android:id="@+id/testDrive_nombre"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:inputType="textFilter"
                        android:textColor="#D0D0D0"
                        android:textSize="15sp" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="1dip"
                        android:background="@drawable/divisor_test_drive" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:background="@android:color/transparent"
                        android:text="Apellido:"
                        android:textColor="#D0D0D0" />

                    <EditText
                        android:id="@+id/testDrive_apellido"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:inputType="textFilter"
                        android:textColor="#D0D0D0"
                        android:textSize="15sp" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="1dip"
                        android:background="@drawable/divisor_test_drive" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.18"
                        android:background="@android:color/transparent"
                        android:text="Mail:"
                        android:textColor="#D0D0D0" />

                    <EditText
                        android:id="@+id/testDrive_email"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:inputType="textFilter"
                        android:textColor="#D0D0D0"
                        android:textSize="15sp" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="1dip"
                        android:background="@drawable/divisor_test_drive" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip" >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:background="@android:color/transparent"
                        android:text="Telefono:"
                        android:textColor="#D0D0D0" />

                    <EditText
                        android:id="@+id/testDrive_telefono"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:inputType="phone"
                        android:textColor="#D0D0D0"
                        android:textSize="15sp" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="1dip"
                        android:background="@drawable/divisor_test_drive" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip" >

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:background="@android:color/transparent"
                        android:text="Ciudad:"
                        android:textColor="#D0D0D0" />

                    <EditText
                        android:id="@+id/testDrive_ciudad"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:inputType="textFilter"
                        android:textColor="#D0D0D0"
                        android:textSize="15sp" >
                    </EditText>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="1dip"
                        android:background="@drawable/divisor_test_drive" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip" >

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:background="@android:color/transparent"
                        android:text="Carro:"
                        android:textColor="#D0D0D0" />

                    <EditText
                        android:id="@+id/testDrive_carro"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:inputType="textCapWords"
                        android:textColor="#D0D0D0"
                        android:textSize="13sp" android:clickable="false" android:cursorVisible="false" android:focusable="false" android:focusableInTouchMode="false">
                    </EditText>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="1dip"
                        android:background="@drawable/divisor_test_drive" />
                </TableRow>
            </TableLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF0000"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textoEnviarTestDrive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:background="@drawable/toolbar_subtitle"
                android:clickable="true"
                android:gravity="right|center_vertical"
                android:paddingRight="10dip"
                android:text="ENVIAR"
                android:textColor="#D0D0D0"
                android:onClick="enviarTestDrive"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>