<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textview0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_title"
        android:gravity="center|center_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:background="#D0D0D0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tituloDescargasInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="7dip"
            android:background="@drawable/toolbar_subtitle"
            android:gravity="center_vertical"
            android:paddingLeft="7dip"
            android:text="@string/DESCARGAS"
            android:textColor="#D0D0D0" />

        <ImageButton
            android:id="@+id/descargasImagenWallpapers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="7dip"
            android:onClick="inicioWallpapers" />

        <ImageButton
            android:id="@+id/descargasImagenRingtones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="8dip"
            android:onClick="inicioRingtones" />
    </LinearLayout>

</LinearLayout>