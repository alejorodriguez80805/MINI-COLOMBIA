<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:focusable="true"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_title"
        android:gravity="center|center_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        android:layout_weight="2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TituloModelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dip"
            android:background="@drawable/toolbar_subtitle"
            android:gravity="left|center_vertical"
            android:paddingLeft="7dip"
            android:textColor="#D0D0D0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:orientation="horizontal" >

            <HorizontalScrollView
                android:id="@+id/horizontalScrollModelos"
                style="@style/noBar"
                android:layout_width="148dip"
                android:layout_height="match_parent"
                android:isScrollContainer="true" >
            </HorizontalScrollView>

            <!--
                 <ScrollView
                android:id="@+id/scrollView2"
                style="@style/noBar"
                android:layout_width="148dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:scrollbars="none" >
            -->

            <LinearLayout
                android:id="@+id/layoutDerModelos"
                android:layout_width="148dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:orientation="vertical" >
            </LinearLayout>
            <!-- </ScrollView> -->
        </LinearLayout>
    </LinearLayout>

</LinearLayout>