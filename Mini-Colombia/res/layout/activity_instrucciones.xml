<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="7dip"
    android:background="@android:color/black"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/toolbar_title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dip"
        android:layout_marginRight="7dip"
        android:layout_marginTop="5dip"
        android:layout_weight="2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextoTituloInstrucciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dip"
            android:background="@drawable/toolbar_subtitle"
            android:gravity="center|center_vertical"
            android:textColor="#D0D0D0"
            android:typeface="normal" />

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dip"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fondo_instrucciones"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextoInstrucciones1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dip"
                    android:gravity="center"
                    android:textColor="#D0D0D0" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/Separador"
                    android:textColor="#D0D0D0"
                    android:textSize="20sp" />
  
                <TextView
                    android:id="@+id/TextoInstrucciones2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dip"
                    android:gravity="center"
                    android:text="@string/Instruccion1"
                    android:textColor="#D0D0D0" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/Separador"
                    android:textColor="#D0D0D0"
                    android:textSize="20sp" /> 
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>