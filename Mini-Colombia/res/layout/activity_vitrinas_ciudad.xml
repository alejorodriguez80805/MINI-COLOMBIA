<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textview0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_title"
        android:gravity="center|center_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:background="#D0D0D0"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="7dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textVitrinasCiudad"
                    android:layout_width="303dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dip"
                    android:background="@drawable/toolbar_subtitle"
                    android:paddingLeft="17dip"
                    android:paddingTop="5dip"
                    android:textColor="@android:color/white" />

                <ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/linearLayoutVitrinasCiudad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/fondo_vitrinas_ciudad"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/vitrinaCiudadImagen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:layout_marginTop="10dip" />

                        <TextView
                            android:id="@+id/textoVitrinaCiudadLoAtendera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dip"
                            android:layout_marginTop="10dip"
                            android:text="DIRECCION VITRINA:"
                            android:textColor="#FF0000" />

                        <TextView
                            android:id="@+id/vitrinaCiudadDireccion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dip" />

                        <TextView
                            android:id="@+id/vitrinaCiudadTelefono"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dip" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:layout_marginTop="5dip"
                            android:background="#FF0000"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="3dip"
                                android:background="@android:color/black"
                                android:padding="3dip"
                                android:text="LO ATENDERA:"
                                android:textColor="#FF0000" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/vitrinaCiudadImagenMecanico"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_marginTop="15dip" />

                        <TextView
                            android:id="@+id/vitrinasCiudadNombreMecanico"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dip"
                            android:layout_marginTop="7dip"
                            android:text="TextView" />

                        <TextView
                            android:id="@+id/vitrinasCiudadMailMecanico"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dip"
                            android:text="TextView" />

                        <TextView
                            android:id="@+id/vitrinasCiudadCelularMecanico"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dip"
                            android:text="TextView" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>