<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textview0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_title"
        android:gravity="center|center_vertical" />

    <TextView
        android:id="@+id/tituloT3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dip"
        android:layout_marginRight="7dip"
        android:layout_marginTop="7dip"
        android:background="@drawable/toolbar_subtitle"
        android:gravity="left|center_vertical"
        android:paddingLeft="7dip"
        android:text="COMUNIDAD."
        android:textColor="#D0D0D0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="7dip"
        android:layout_marginRight="12dip"
        android:layout_marginTop="5dip"
        android:layout_weight="0.5"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip" >

                    <TextView
                        android:id="@+id/tituloImagenT3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dip"
                        android:background="@android:color/black"
                        android:maxWidth="160dip"
                        android:paddingLeft="3dip"
                        android:textColor="@android:color/white" />

                    <ImageButton
                        android:id="@+id/eventosT3Facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toLeftOf="@+id/eventosT3Twitter"
                        android:background="@android:color/transparent"
                        android:onClick="abrirFacebook"
                        android:src="@drawable/facebook" />

                    <ImageButton
                        android:id="@+id/eventosT3Twitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dip"
                        android:background="@android:color/transparent"
                        android:onClick="abrirTwitter"
                        android:src="@drawable/twitter" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/imagenT3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dip"
                    android:layout_marginTop="7dip" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dip"
                    android:layout_marginTop="5dip" >

                    <TextView
                        android:id="@+id/titulo2ImagenT3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:text="TextView" />

                    <WebView
                        android:id="@+id/webViewT3"
                        android:layout_width="212dip"
                        android:layout_height="match_parent"
                        android:layout_alignLeft="@id/titulo2ImagenT3"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/titulo2ImagenT3"
                        android:scrollbars="none" />

                </RelativeLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</LinearLayout>